

@model watchAMovie.Models.Movie

@if (Request.IsAuthenticated)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Control</h3>
        </div>
        <div class="panel-body">
            <div class="form-actions no-color">
                <div class="col-md-4">
                    @using (Html.BeginForm("Edit", "Movies", new { Id = @Model.MovieID }, FormMethod.Get))
                    {
                        <input type="submit" name="action" value="Edit" class="col-md-12 btn btn-warning" />
                    }
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("Delete", "Movies", new { Id = @Model.MovieID }, FormMethod.Get))
                    {
                        <input type="submit" name="action" value="Delete" class="col-md-12 btn btn-danger" />
                    }
                </div>
            </div>
        </div>
    </div>
}


