        <tr>
            <th>
                @Html.Label("User Name")
            </th>
            <th>
                @Html.Label("Roles")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var Seller in Model.Members)
    {
            <tr>
                <td>
                    @Seller.UserName
                </td>
                <td>
                    Member
                </td>
                <td>
                    @Html.ActionLink("More Details", "Details", new { id = Seller.Id })
                </td>
            </tr>
    }
    </table>
</div>
<div style="margin-top:20px;">
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Index", "Admin")" class="btn btn-success pull-right">
            <span class="fa fa-dashboard fa-fw  text-info"></span> Dashboard
        </a>
    }
</div>